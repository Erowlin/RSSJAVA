<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.jonathan.rss" >
    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".AddFeedDialog"
            android:exported="true"
            android:label="add"
            android:theme="@android:style/Theme.Holo.Dialog">
        </activity>
        <activity
            android:name=".FeedList"
            android:exported="true"
            android:label="@string/title_activity_feed_view" >
        </activity>
        <activity
            android:name=".FeedView"
            android:exported="true"
            android:label="@string/title_activity_feed_view" >
        </activity>
        <activity
            android:name=".ItemView"
            android:exported="true"
            android:label="@string/title_activity_item_view" >
        </activity>
        <activity
            android:name=".LoginView"
            android:label="@string/app_name"
            android:windowSoftInputMode="adjustResize|stateVisible" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />


</manifest>
